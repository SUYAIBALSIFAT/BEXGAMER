header.header
    nav.nav.nav--tours
        a.nav__el(href='/') All tours
    .header__logo
        img(src='/css/logo-white.png', alt='Natours logo')
    nav.nav.nav--user
     if user
        a.nav__el.nav__el--logout(href='/logout') log out
        a.nav__el(href='/me')
          img.nav__user-img(src=`/img/users/${user.photo}`, alt='User photo')
          span= user.name
     else
        a.nav__el(href='/login') Log in
        a.nav__el.nav__el--cta(href='#') Sign up
